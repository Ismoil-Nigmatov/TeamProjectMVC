
@using TeamProjectMVC.Entity;

@model TeamProjectMVC.Models.LoginViewModel.LoginViewModel;

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            height: auto;
            width: auto;
            margin: 0px;
            padding: 0px;
            font-family: sans-serif;
           
            background: url( https://i.ibb.co/p1t5Dpp/wd.jpg) no-repeat;
            background-size: cover;
        }

        .login-box {
            width: 500px;
            height: 300px;
            border-radius: 15px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
           color: #fff;
            padding: 10px;
        }

            .login-box h1 {
                width: 100%;
                float: left;
                font-size: 30px;
                margin-bottom: 50px;
                padding: 13px 0;
                display: flex;
                align-items: center;
                justify-content: center;
            }

        .textbox {
            width: 100%;
            overflow: hidden;
            font-size: 20px;
            padding: 8px 0;
            margin: 8px 0;
            cursor: pointer;
            border-bottom: 2px solid;
            transition: .5s ease-in-out;
        }

            .textbox:hover {
                border-bottom: 2px solid teal;
                color: teal;
                transition: all 0.3s ease-in-out;
                i

        {
            color: teal;
            transition: all 0.3s ease-in-out;
        }

        }

        .textbox i {
            color: white;
            width: 26px;
            float: left;
            text-align: center;
        }



        .textbox input {
            cursor: pointer;
            border: none;
            outline: none;
            background: none;
            color: white;
            font-size: 18px;
            width: 80%;
            float: left;
            margin: 0 10px;
        }

        .btn {
            width: 100%;
            height: 50px;
            background: none;
            border: 2px solid;
            color: white;
            padding: 5px;
            font-size: 18px;
            cursor: pointer;
            margin-top: 30px;
            outline: none;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: .5s ease-in-out;
        }


        .registerLink a {
            font-size: 1em;
            text-decoration: none;
            color: teal;
        }






        .btn:hover {
            transition: all 1s ease-in;
            border: 2px solid teal;
            color: teal;
        }



        input::placeholder {
            color: white;
        }

        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            transition: background-color 5500s ease-in-out 0s;
            -webkit-text-fill-color: white !important;
        }
    </style>
</head>




<body translate="no">
    <form asp-controller="Account" asp-action="Login" method="post" enctype="multipart/form-data" class="col-md-6" style="margin: 5px auto;">
        <div class="login-box">
            <h1> <i class="fa fa-user" aria-hidden="true"></i> &nbsp;  Login</h1>
            @if (TempData["Error"] != null)
            {
                <p class="col-md-12 btn btn-danger" style="color:red;">
                    <span><b>Sorry!</b> - @TempData["Error"]</span>
                </p>
            }
            <div class="textbox">
                <i class="fa fa-envelope" aria-hidden="true"></i>
               
                <input  asp-for="Email" class="form-control" autocomplete="off" type="email" placeholder="Email" />
              
            </div>
            <div class="textbox">
                <i class="fa fa-lock" aria-hidden="true"></i>
               
                <input asp-for="Password" class="form-control" autocomplete="off" type="password" placeholder="Password"  />

               
            </div>
            <button asp-controller="Account" asp-action="Login" type="submit" class="btn btn-pill btn-outline-info" style="width: 100%;">
                <i class="fa fa-sign-in mr-1"></i>  &nbsp; Login
            </button>
            <p class="registerLink">Do not have an account ?  <a asp-controller="Account" asp-action="Register">Register here</a></p>
        </div>
    </form>
</body>


