@model TeamProjectMVC.Dto.RoleProductDTO
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="main">
        <div class="container">
            <a asp-controller="Audits" asp-action="Index" class="btn btn-warning">Show Audit</a>
            @if (@Model.Role != "USER")
            {
                <button style="height: 38px" type="button" class="btn btn-warning" id="btn-add">Add Product</button>
                <div id="modalAdd">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5 text-warning" id="exampleModalLabel">Add</h1>
                        <button type="button" class="btn-close btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" asp-action="Create" asp-controller="Product">
                        <div class="modal-body">
                            <input type="hidden" name="userId" value="@Model.Id"/>
                            <input type="hidden" name="role" value="@Model.Role"/>
                            <input oninput="this.value = this.value.replace(/[^a-zA-Zа-яА-Я0-9]/g, '')" value="" placeholder="Title" name="Name" class="form-control w-100 my-3 px-3" required/>
                            <input oninput="this.value = this.value.replace(/[^0-9]/g, '')" type="text" value="" placeholder="Quantity" name="Quantity" class="form-control w-100 my-3 px-3" required/>
                            <input oninput="this.value = this.value.replace(/[^0-9,]/g, '').replace(/(\..*)\./g, '$1')" value="" placeholder="Price" name="Price" class="form-control w-100 my-3 px-3" title="Enter a valid integer or double" required/>
                        </div>
                        <div class="moda-footer">
                            <button type="submit" class="w-100 btn btn-outline-warning">Add</button>
                        </div>
                    </form>
                </div>
            }
            <form style="overflow-y: scroll;" class="h-100">
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Quantiy
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            ToTalPrice
                        </th>
                        @if (@Model.Role != "USER")
                        {
                            <th>Action</th>
                        }
                    </tr>
                    </thead>
                    <tbody>

                    @foreach (var iteam in Model.Products)
                    {
                        <tr>
                            <td><input class="inp" value="@iteam.Name" name="@iteam.Name" readonly/></td>
                            <td><input class="inp" value="@iteam.Quantity" name="@iteam.Quantity" readonly/></td>
                            <td><input class="inp" value="@iteam.Price" name="@iteam.Price" readonly/></td>
                            <td><input class="inp" value="@iteam.ToTalPrice" name="@iteam.ToTalPrice" readonly/></td>
                            @if (@Model.Role != "USER")
                            {
                                <td>
                                    <div class="  d-flex justify-content-between align-content-center w-100">
                                        <button style="height: 38px" type="button" class="btn btn-warning" id="btn-warning">Update</button>
                                        <div id="modalUpdate">
                                            <form action="@Url.Action("Update", "Product")">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5 text-warning" id="exampleModalLabel">Update</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <input type="hidden" name="userId" value="@Model.Id"/>
                                                    <input type="hidden" name="role" value="@Model.Role"/>
                                                    <input type="hidden" name="id" value="@iteam.Id"/>
                                                    <input oninput="this.value = this.value.replace(/[^a-zA-Zа-яА-Я0-9]/g, '')" value="@iteam.Name" name="Name" class="form-control w-100 my-3 px-3"/>
                                                    <input oninput="this.value = this.value.replace(/[^0-9]/g, '')" value="@iteam.Quantity" name="Quantity" class="form-control numInput w-100 my-3 px-3" required/>
                                                    <input oninput="this.value = this.value.replace(/[^0-9,]/g, '').replace(/(\..*)\./g, '$1')" value="@iteam.Price" placeholder="Price" name="Price" class="form-control numInput w-100 my-3 px-3" required/>
                                                </div>
                                                <div class="moda-footer">
                                                    <button type="submit" asp-action="Update" asp-controller="Product" class="w-100 btn btn-outline-warning">Update</button>
                                                </div>
                                            </form>
                                        </div>
                                        <form>
                                            <input value="ADMIN" name="ADMIN" type="hidden"/><input value="@iteam.Id" name="@iteam.Id" type="hidden"/>
                                            <button type="button" id="btn-danger" class="btn btn-danger">Delete</button>
                                            <div id="modalDelete" class="modal" tabindex="-1" role="dialog">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <div class="d-flex justify-content-between align-items-center w-100">
                                                                <h1 class="modal-title fs-5 text-danger" id="exampleModalToggleLabel">Delete</h1>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                        </div>
                                                        <div class="modal-body">
                                                            <h4 class="text-dark text-center">Do you want to delete this product</h4>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <input value="@Model.Id" name="userId" type="hidden"/>
                                                            <input value="@Model.Role" name="role" type="hidden"/>
                                                            <input value="@iteam.Id" name="Id" type="hidden"/>
                                                            <button type="submit" asp-action="Delete" asp-controller="Product" class="w-100  btn btn-outline-danger"> Confirm </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>

